
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>


<h3>CADASTRO DE CLIENTE</h3>


<script>
    function cpf() {
        var mask = document.getElementById("cpf");
        if (mask.value.length == 3 || mask.value.length == 7) {
            mask.value += ".";
        }
        else if (mask.value.length == 11) {
            mask.value += "-";
        }
    }
</script>


<form id="cadastro">
    <fieldset>
        <legend class="inicio">Insira os dados do cliente para efetuar o cadastro:</legend>
    </fieldset>

    <div>
        <label>NOME</label>
        <br />
        <input class="input" type="text" autocomplete="off" placeholder="Nome" />
        <br />
        <br />
    </div>

    <div>
        <label>SOBRENOME</label>
        <br />
        <input class="input" type="text" autocomplete="off" placeholder="Sobrenome" />
        <br />
        <br />
    </div>

    <div>
        <label>CPF</label>
        <br />
        <input class="input" id="cpf" type="text" autocomplete="off" placeholder="CPF" maxlength="14" onclick="cpf()" />
        <br />
        <br />
    </div>

    <div>
        <label>TELEFONE</label>
        <br />
        <input class="input" type="tel" placeholder="Celular" maxlength="11" />
        <br />
        <br />
    </div>

    <div>
        <label>E-MAIL</label>
        <br />
        <input class="input" type="text" autocomplete="off" placeholder="E-mail" />
        <br />
        <br />
    </div>

    <div>
        <label>SEXO</label>
        <br />
        <input type="radio" name="gender" value="M" /> M &nbsp&nbsp
        <input type="radio" name="gender" value="F" /> F
    </div>

    <br />

    <input class="botaoSalvaProduto" type="submit" value="Enviar" />&nbsp;&nbsp;&nbsp;&nbsp;
    <input class="botaoCancelaProduto" type="reset" value="Cancelar" />

    <br />
    <br />
    <a href="~/Home/Login">Ja tem cadastro? Faça seu login!</a>
</form>
